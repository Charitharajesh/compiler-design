#include <stdio.h>
#include <ctype.h>

int main() {
    char ch;
    FILE *fp = fopen("input.txt", "r");

    while ((ch = fgetc(fp)) != EOF) {
        if (isalpha(ch))
            printf("%c : Identifier\n", ch);
        else if (isdigit(ch))
            printf("%c : Constant\n", ch);
        else if (ch == '/')
            printf("// : Comment\n");
    }
    fclose(fp);
}


sample output

a : Identifier
1 : Constant
0 : Constant
// : Comment
